    \qquad
    b = \begin{bmatrix} 3 \\ 2 \\ 1\end{bmatrix}
\end{equation*}

\begin{equation*}
    a+b = \begin{bmatrix} 4 \\ 4 \\ 4 \end{bmatrix}
    \qquad
    a-b = \left[\negthickspace\begin{array}{r} -2 \\ 0 \\ 2 \end{array}\right]
